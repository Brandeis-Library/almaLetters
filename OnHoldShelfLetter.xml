<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="1.0"
   xmlns:xsl="http://www.w3.org/1999/XSL/Transform">


   <xsl:include href="header.xsl" />
   <xsl:include href="senderReceiver.xsl" />
   <xsl:include href="mailReason.xsl" />
   <xsl:include href="footer.xsl" />
   <xsl:include href="style.xsl" />
   <xsl:include href="recordTitle.xsl" />

   <xsl:template match="/">
      <html>
         <head>
            <xsl:call-template name="generalStyle" />
            <style>
         table  {
            font-size: 140%;
            color: black;
         }
            </style>
         </head>

         <body>
            <xsl:attribute name="style">
               <xsl:call-template name="bodyStyleCss" />
               <!-- style.xsl -->
            </xsl:attribute>

            <xsl:call-template name="head" />
            <!-- header.xsl -->
            <xsl:call-template name="senderReceiver" />
            <!-- SenderReceiver.xsl -->

            <xsl:call-template name="toWhomIsConcerned" />
            <!-- mailReason.xsl -->

            <div class="messageArea">
               <div class="messageBody">
                  <table cellspacing="0" cellpadding="5" border="0">
                     <tr>
                        <td>@@following_item_requested_on@@ <xsl:value-of select="notification_data/request/create_date"/>
, is ready for  <xsl:choose>
                        <xsl:when test="notification_data/organization_unit/code = 'ASC'">
                           use.</xsl:when>
                        <xsl:otherwise>pick up</xsl:otherwise>
                     </xsl:choose>
                  </td>
               </tr>

               <tr>
                  <td>
                     <xsl:call-template name="recordTitle" />
                     <!-- recordTitle.xsl --></td>
               </tr>

               <xsl:if test="notification_data/request/work_flow_entity/expiration_date">
                  <tr>
                     <td> @@note_item_held_until@@ <xsl:value-of select="notification_data/request/work_flow_entity/expiration_date"/>
                     </td>
                  </tr>
               </xsl:if>

               <tr>
                  <td>
                     <xsl:choose>
                        <xsl:when test="notification_data/organization_unit/code = 'ASC'">
                           <strong>For Library Use:</strong>
                        </xsl:when>
                        <xsl:otherwise>
                           <strong>For Library Use:</strong>
                        </xsl:otherwise>
                     </xsl:choose>
                  </td>
               </tr>
               <xsl:choose>
                  <xsl:when test="notification_data/organization_unit/code = 'ASC'">
                     <tr>
                        <td>Come to Robert D. Farber University Archives and Special Collections - located on the second floor (one floor down from the main floor) of Goldfarb Library - at the time of your appointment.</td>
                     </tr>
                     <tr>
                        <td>Please note that your item is for <strong>in library use only</strong> and cannot leave the library.</td>
                     </tr>
                  </xsl:when>
                  <xsl:otherwise>
                     <tr>
                        <td>Visit the Information and Borrowing Desk during <a href="https://www.brandeis.edu/library/about/hours/index.html">our operating hours</a> to pickup your items.</td>

                     </tr>




                     <xsl:if test="notification_data/request/calculated_destination_name = 'Main Library - In Library Use Only'">
                        <tr>
                           <td>Please note that your item is for <strong>in reading room use only</strong> and cannot leave the room.</td>
                        </tr>
                     </xsl:if>


                     <tr>
                        <td>If you no longer need this item or have any questions please email <a href="mailto:borrowing@brandeis.edu">borrowing@brandeis.edu</a> or respond to this email.</td>
                     </tr>
                  </xsl:otherwise>
               </xsl:choose>
               <xsl:if test="notification_data/request/system_notes">
                  <tr>
                     <td></td>
                  </tr>

                  <tr>
                     <td>
                        <xsl:value-of select="notification_data/request/system_notes"/>
                     </td>
                  </tr>

               </xsl:if>

            </table>
         </div>
      </div>

      <br />

      <table>
         <tr>
            <td>@@sincerely@@</td>
         </tr>
         <tr>
            <td>@@department@@</td>
         </tr>
      </table>

      <xsl:call-template name="lastFooter" />
      <!-- footer.xsl -->
   </body>
</html>
</xsl:template>
</xsl:stylesheet>